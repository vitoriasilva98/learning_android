<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_figurinhas_disponiveis"

            android:textColor="@color/black" />

        <TextView
            android:id="@+id/total_carrinho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:gravity="end"
            android:text="@string/text_total_carrinho"
            android:textColor="@color/black"
            android:textSize="18sp"
            tools:text="Total: R$ 0,00" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fig01"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/fig_01" />

                <Button
                    android:id="@+id/fig01_comprar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/cor_verde_comprar"
                    android:text="@string/text_comprar"
                    android:textAllCaps="false" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fig02"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/fig_03" />

                <Button
                    android:id="@+id/fig02_comprar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/cor_verde_comprar"
                    android:text="@string/text_comprar"
                    android:textAllCaps="false" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/fig03"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:scaleType="fitStart"
                    android:src="@drawable/fig_04" />

                <Button
                    android:id="@+id/fig03_comprar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/cor_verde_comprar"
                    android:text="@string/text_comprar"
                    android:textAllCaps="false" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/nota_fiscal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/cor_nota_fiscal"
        android:text="@string/text_ver_nota"
        android:textAllCaps="false"
        android:textSize="18sp" />


</LinearLayout>

